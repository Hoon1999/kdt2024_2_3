<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
 maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="250.0" >
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
   <top>
      <Label text="상품 삭제" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #DDDDDD;" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <children>
            <Separator />
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <center>
                  <Label alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" text="&lt;삭제할 상품 정보&gt;" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <left>
                  <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="상품 id : " BorderPane.alignment="CENTER" />
               </left>
               <center>
                  <Label fx:id="lbProductId" prefWidth="100.0" text="id" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <left>
                  <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="상품명 : " BorderPane.alignment="CENTER" />
               </left>
               <center>
                  <Label fx:id="lbProductName" prefWidth="100.0" text="이름" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <left>
                  <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="카테고리 : " BorderPane.alignment="CENTER" />
               </left>
               <center>
                  <Label fx:id="lbProductCategory" prefWidth="100.0" text="카테고리" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
            <Separator />
         </children>
      </VBox>
   </center>
   <bottom>
      <BorderPane BorderPane.alignment="CENTER">
         <left>
            <Button fx:id="btnCancel" mnemonicParsing="false" text="취소" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </Button>
         </left>
         <right>
            <Button fx:id="btnOk" mnemonicParsing="false" text="확인" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </Button>
         </right>
         <top>
            <Label text="정말 삭제하시겠습니까?" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </Label>
         </top>
      </BorderPane>
   </bottom>
</BorderPane>
