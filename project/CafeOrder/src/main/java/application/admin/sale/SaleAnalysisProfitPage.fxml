<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="360.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER">
         <content>
            <VBox alignment="TOP_CENTER">
               <children>
                  <HBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Button fx:id="leftBtn" mnemonicParsing="false" text="&lt;" />
                        <Label fx:id="yearLbl" text="####" />
                        <Label text="년" />
                        <Label fx:id="monthLbl" text="##" />
                        <Label text="월" />
                        <Button fx:id="rightBtn" mnemonicParsing="false" text="&gt;" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Label text="이 달 실 매출액 : " />
                        <Label fx:id="monthlySalesLbl" text="100000" />
                        <Label text="원" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
                  <HBox fx:id="hbox" alignment="CENTER" spacing="2.0">
                     <children>
                        <Label alignment="CENTER" prefWidth="60.0" style="-fx-border-color: black; -fx-text-fill: red;" text="일" />
                        <Label alignment="CENTER" prefWidth="60.0" style="-fx-border-color: black;" text="월" />
                        <Label alignment="CENTER" prefWidth="60.0" style="-fx-border-color: black;" text="화" />
                        <Label alignment="CENTER" prefWidth="60.0" style="-fx-border-color: black;" text="수" />
                        <Label alignment="CENTER" prefWidth="60.0" style="-fx-border-color: black;" text="목" />
                        <Label alignment="CENTER" prefWidth="60.0" style="-fx-border-color: black;" text="금" />
                        <Label alignment="CENTER" prefWidth="60.0" style="-fx-border-color: black;" text="토" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
                  <TilePane fx:id="tpTilePane" alignment="CENTER" hgap="2.0" vgap="2.0" prefColumns="7" prefWidth="420.0">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     
                  </TilePane>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
