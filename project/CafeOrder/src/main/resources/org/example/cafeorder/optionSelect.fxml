                              <Button onAction="#optionAddBtn" mnemonicParsing="false" text="+" />
                           </buttons>
                        </ButtonBar>
                        <ButtonBar prefHeight="40.0" prefWidth="260.0">
                          <buttons>
                              <Label prefHeight="14.0" prefWidth="251.0" text="option2" />
                              <RadioButton mnemonicParsing="false" text="많게" />
                              <RadioButton mnemonicParsing="false" text="보통" />
                              <RadioButton mnemonicParsing="false" text="적게" />
                          </buttons>
                        </ButtonBar>
                     </children>
                  </VBox>
               </children></AnchorPane>
        </content>
      </ScrollPane>
   </center>
   <bottom>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="cartBtn" mnemonicParsing="false" onAction="#cartBtnClick" prefHeight="41.0" prefWidth="350.0" text="장바구니에 담기" />
