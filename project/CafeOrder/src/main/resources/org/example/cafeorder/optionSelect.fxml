<BorderPane prefHeight="501.0" prefWidth="428.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.cafeorder.MenuSelectController">
   <center>
      <ScrollPane prefHeight="312.0" prefWidth="428.0">
        <content>
          <AnchorPane prefWidth="407.0">
               <children>
                  <VBox alignment="TOP_CENTER" layoutX="14.0" layoutY="14.0" prefWidth="377.0">
                     <children>
                        <ButtonBar prefHeight="22.0" prefWidth="335.0">
                           <buttons>
                              <Label prefHeight="14.0" prefWidth="269.0" text="option1" textAlignment="CENTER" />
