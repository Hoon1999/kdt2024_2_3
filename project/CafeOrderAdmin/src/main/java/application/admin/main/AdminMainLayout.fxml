<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
 maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
 prefHeight="400.0" prefWidth="700.0"
 stylesheets="@AdminMainLayout.css"
 fx:controller="application.admin.main.AdminMainPageController" >
   <children>
      <BorderPane fx:id="bp" prefHeight="400.0" prefWidth="700.0">
         <left>
            <VBox prefHeight="400.0" prefWidth="120.0" fx:id="vbMenu" BorderPane.alignment="CENTER">
               <fx:define><ToggleGroup fx:id="group" /></fx:define>
               <children>
                  <RadioButton fx:id="btnOrderManagement" prefHeight="58.0" prefWidth="120.0" text="주문 관리" toggleGroup="$group" userData="OrderManagementPage" >
                     <font>
                        <Font size="16.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="btnSaleManagement" prefHeight="58.0" prefWidth="120.0" text="매출 관리" toggleGroup="$group" userData="SaleManagamentPage" >
                     <font>
                        <Font size="16.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="btnProductManagement" prefHeight="58.0" prefWidth="120.0" text="상품 관리" toggleGroup="$group" userData="ProductManagamentPage" >
                     <font>
                        <Font size="16.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="btnMenuManagement" prefHeight="58.0" prefWidth="120.0" text="메뉴 관리" toggleGroup="$group" userData="MenuManagamentPage" >
                     <font>
                        <Font size="16.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="btnSettingManagement" prefHeight="58.0" prefWidth="120.0" text="비밀번호 관리 / 종료" toggleGroup="$group" userData="SettingManagamentPage" >
                     <font>
                        <Font size="11.0" />
                     </font>
                  </RadioButton>
               </children>
            </VBox>
         </left>
         <center>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
