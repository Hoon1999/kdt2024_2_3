<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>

<BorderPane prefHeight="380.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <BorderPane prefHeight="360.0" BorderPane.alignment="CENTER">
         <top>
            <Label text="상품 카테고리" BorderPane.alignment="CENTER" />
         </top>
         <center>
            <ListView fx:id="lvCategoryList" prefWidth="120.0" BorderPane.alignment="CENTER" />
         </center>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </BorderPane>
   </left>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <BorderPane prefHeight="360.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <left>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <top>
                  <Label text="상품" BorderPane.alignment="CENTER" />
               </top>
               <center>
                  <ListView fx:id="lvProductList" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </left>
         <right>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <center>
                  <ListView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
               </center>
               <top>
                  <Label text="Label" BorderPane.alignment="CENTER" />
               </top>
            </BorderPane>
         </right>
         <center>
            <Separator orientation="VERTICAL" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets left="15.0" right="10.0" />
               </padding>
            </Separator>
         </center>
      </BorderPane>
   </center>
   <right>
      <BorderPane BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <top>
		          <Label text="연결된 옵션" BorderPane.alignment="CENTER" />
         </top>
         <center>
		          <ListView fx:id="lvOptionList" prefWidth="120.0" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <TilePane alignment="BOTTOM_CENTER" hgap="5.0" prefColumns="2" prefRows="1" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnInsertProduct" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" text="옵션&#10;연결">
                  </Button>
                  <Button fx:id="btnDeleteProduct" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" text="옵션&#10;제거">
                  </Button>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </TilePane>
         </bottom>
      </BorderPane>
   </right>
</BorderPane>
